pkgbase=mplapack
pkgname=('mplapack')
pkgver=@VERSION@
pkgrel=1
pkgdesc="Multiple precision linear algebra package"
arch=('x86_64' 'i686')
license=('Custom')
url="@PACKAGE_URL@"
groups=('mplapack')
makedepends=( 'qd'
              'gmp'
              'mpfr'
              'libmpc'
              'libtool'
              'check')
source=(mplapack-${pkgver}.tar.gz)

#create this sum with the command "sha256sum mplapack-${pkgver}.tar.gz" before each build of the package
sha256sums=('5a211622838db5e954355840423c232010335cf1690d5224076f212663de4c84')

build() {
  cd "${srcdir}/mplapack-${pkgver}"
  ./configure --prefix=/usr --enable-gmp --enable-mpfr --enable-qd --enable-dd --enable-double --enable-__float128 --enable-longdouble --enable-optimization --with-system-gmp --with-system-mpfr --with-system-mpc --with-system-qd --disable-benchmark --disable-examples --disable-reference
  make
}

check() {
  cd "$srcdir/mplapack-${pkgver}"
  make check
}

package_mplapack() {
  depends=('qd'
           'gmp'
           'mpfr'
           'libmpc')
  provides=("mplapack=${pkgver}")


  # install library and header files
  cd "${srcdir}/mplapack-${pkgver}"
  make DESTDIR="${pkgdir}" install

  # install pkg-config file
  install -Dm644 mplapack.pc "$pkgdir/usr/lib/pkgconfig/mplapack.pc"

  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  cd ../..
}


